<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_start_task_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Start Task 1" />

    <Button
        android:id="@+id/btn_start_task_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start_task_1"
        android:layout_centerHorizontal="true"
        android:text="Start Task 2" />

    <Button
        android:id="@+id/btn_start_task_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start_task_2"
        android:layout_centerHorizontal="true"
        android:text="Start Task 3" />

    <ProgressBar
        android:id="@+id/progress_bar_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_start_task_1"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_bar_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_start_task_2"
        android:layout_below="@id/btn_start_task_1"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_bar_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_start_task_3"
        android:layout_below="@id/btn_start_task_2"
        android:visibility="gone" />

</RelativeLayout>